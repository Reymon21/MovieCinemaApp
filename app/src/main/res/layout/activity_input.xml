<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputActivity"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#9FE2BF"
        android:textSize="40dp"
        android:textStyle="bold"
        android:text="         Pesan Tiket " />

    <EditText
        android:layout_marginTop="90dp"
        android:inputType="textCapSentences"
        android:id="@+id/et_nomor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:hint="Nomor Tiket"/>

    //kedua
    <EditText
        android:inputType="textCapSentences"
        android:id="@+id/et_jenis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_below="@+id/et_nomor"
        android:hint="Jenis Tiket"/>

    //ketiga
    <EditText
        android:inputType="textCapSentences"
        android:id="@+id/et_jumlah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:maxLength="1"
        android:layout_below="@id/et_jenis"
        android:hint="Jumlah Tiket"/>

    //keempat
    <EditText
        android:inputType="textCapSentences"
        android:id="@+id/et_harga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_below="@+id/et_jumlah"
        android:hint="Harga Tiket"/>



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/fab_done"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:background="@color/colorPrimaryDark"
        android:layout_marginBottom="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_done"
        android:tint="@color/colorWhite"/>

</RelativeLayout>